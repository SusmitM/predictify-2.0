model User {
id String @id @default(auto()) @map("_id") @db.ObjectId
email String @unique
password String?
isVerified Boolean
verificationCode String?
verifyCodeExpiry DateTime?
extractedData    Json[]    @default([])
createdAt   DateTime @default(now())
updatedAt   DateTime @default(now()) @updatedAt
}

